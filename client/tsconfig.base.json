{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@backend/common/*": [
        "apps/backend/src/app/common/*"
      ],
      "@backend/core/*": [
        "apps/backend/src/app/core/*"
      ],
      "@backend/domain/*": [
        "apps/backend/src/app/domain/*"
      ],
      "@frontend/*": [
        "apps/frontend/*"
      ],
      "@libs/*": [
        "libs/shared/src/lib/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
